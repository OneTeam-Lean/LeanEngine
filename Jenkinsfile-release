pipeline {
   agent any

   stages {
      stage('release') {
         steps {
            git 'https://github.com/OneTeam-Lean/LeanEngine.git'

            sh "./go image 0.${BUILD_NUMBER} ${HARBOR_PASSWORD} "
         }

         post {
            success {
               echo "- Docker image build successfully and pushed to docker registry. -"
            }
         }
      }
   }
}
